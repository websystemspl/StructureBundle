<div class="s-twig-block {{ uid }}" style="
    {% if paddingTop %} padding-top: {{ paddingTop }}px; {% endif %}
    {% if paddingRight %} padding-right: {{ paddingRight }}px; {% endif %}
    {% if paddingBottom %} padding-bottom: {{ paddingBottom }}px; {% endif %}
    {% if paddingLeft %} padding-left: {{ paddingLeft }}px; {% endif %}
    {% if marginTop %} margin-top: {{ marginTop }}px; {% endif %}
    {% if marginRight %} margin-right: {{ marginRight }}px; {% endif %}
    {% if marginBottom %} margin-bottom: {{ marginBottom }}px; {% endif %}
    {% if marginLeft %} margin-left: {{ marginLeft }}px; {% endif %}
">
    {{ content|raw }}
</div>